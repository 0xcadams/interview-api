  },
  "contributors": [
    "Chase Adams (https://twitter.com/_chase_adams)"
  ],
  "keywords": [
    "interview",
    "whiteboard",
    "typescript",
    "node",
    "firebase",
    "hiring",
    "hiring-without-whiteboards"
  ],
  "bugs": {
    "url": "https://github.com/chase-adams/interview-api/issues"
  },
  "license": "MIT",
  "engines": {
    "node": "8"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "^3.4.34",
    "@types/chai-http": "0.0.29",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.33",
    "@types/mocha": "^2.2.32",
    "@types/morgan": "^1.7.32",
    "@types/node": "^6.0.46",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-typescript": "^3.1.1",
    "mocha": "^3.1.2",
    "semantic-release": "^15.8.1",
    "semantic-release-docker": "^2.1.0",
    "ts-node": "^3.3.0",
    "tslint": "~5.8.0",
    "typescript": "^2.0.6"
  },
  "dependencies": {
    "@types/helmet": "^0.0.38",
    "body-parser": "^1.15.2",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "firebase-admin": "~6.0.0",
    "firebase-functions": "^2.1.0",
    "helmet": "^3.12.1",
    "morgan": "^1.7.0",
    "tslint": "^5.10.0"
